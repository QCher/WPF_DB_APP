<Window x:Class="WpfTest.IndexWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IndexWindow" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="50,30,50,90">
            <Label x:Name="Label" Content="             Please enter index"/>
        </StackPanel>
        <StackPanel Margin="50,60,50,80">
            <TextBox x:Name="TextBox" Height="20"/>
        </StackPanel>
        <StackPanel Margin="10,100,10,40" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="Ok" Content="OK" Click="OK_Click" Width="110"/>
            <Button x:Name="Cancel" Content="Cancel" Click="Cancel_Click" Width="110"/>
        </StackPanel>
        
    </Grid>
</Window>
